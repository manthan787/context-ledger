{
  "name": "context-ledger",
  "version": "0.4.0",
  "description": "Local-first session analytics and memory handoff for AI coding agents.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ctx-ledger": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test:e2e:claude-capture": "tsx scripts/e2e/claude-capture-e2e.ts",
    "test:e2e:full": "tsx scripts/e2e/full-workflow-e2e.ts",
    "typecheck": "tsc --noEmit",
    "release": "bash scripts/release.sh",
    "release:patch": "bash scripts/release.sh patch",
    "release:minor": "bash scripts/release.sh minor",
    "release:major": "bash scripts/release.sh major"
  },
  "keywords": [
    "cli",
    "developer-tools",
    "analytics",
    "ai",
    "sqlite"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "better-sqlite3": "^12.6.2",
    "commander": "^14.0.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
